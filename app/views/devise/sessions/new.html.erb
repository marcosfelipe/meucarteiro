<div class="ui two column centered grid">
  <div class="column">
    <h2>Sign in</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="ui form">
          <div class="field">
            <%= f.email_field :email, :autofocus => true, :placeholder => 'E-Mail' %></div>

          <div class="field">
            <%= f.password_field :password, {:placeholder => 'Senha'} %>
          </div>

          <div class="field">
            <% if devise_mapping.rememberable? -%>
                <div class="ui checkbox"><%= f.check_box :remember_me %>
                <label>Remember me!</label></div>
            <% end -%>
          </div>

          <div><%= f.submit "Sign in", {:class => 'ui button green'} %></div>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
