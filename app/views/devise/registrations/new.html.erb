<div class="ui two column centered grid">
  <div class="column">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="ui form">
            <div class="field">
              <%= f.email_field :email, :autofocus => true, :placeholder => 'E-Mail' %>

            </div>
            <div class="field">
              <%= f.password_field :password, :placeholder => 'Senha' %>
            </div>

            <div class="field">

              <%= f.password_field :password_confirmation, :placeholder => 'Confirmação' %>

            </div>
            <div class="ui buttons">
              <%= f.submit "Quero testar agora!", :class => 'ui button green' %>
            </div>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>